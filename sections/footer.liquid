{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Primary menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_two",
        "label": "Additional menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      },
      {
        "type": "text",
        "id": "store_name",
        "label": "Store Legal Name"
      },
      {
        "type": "text",
        "id": "footer_instagram",
        "label": "Instagram",
        "default": "Instagram"
      },
      {
        "type": "text",
        "id": "insta_account_link_1",
        "label": "Instagram account name",
        "default": "wemakewebsites_"
      },
	  {
		"type": "text",
		"id": "footer_facebook",
		"label": "Facebook",
		"default": "Facebook"
	  },
	  {
		"type": "text",
		"id": "facebook_account_link_1",
		"label": "Facebook account name",
		"default": "wemakewebsites_"
	  }
    ]
  }
{% endschema %}
