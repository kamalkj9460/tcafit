    {% if social_icons and section.settings.show_payment_icons %}
      <div class="site-footer__copyright--bottom">
        {% comment %}<small class="site-footer__copyright-content">{{ 'Built and Designed by WeMakeWebsites' | link_to: 'https://wemakewebsites.com' }}</small>{% endcomment %}
